<%= f.fields_for :address do |a| %>
    <fieldset>
      <legend>Address Details</legend>
      <div class="form-group">
        <label class="control-label">Address <span style="color:red;"></span></label>
        <%= a.text_field :address_1, :class=>"form-control  input-lg", placeholder:"House #1, Street #2, Johar town, Lahore" %>
      </div>
      <div class="form-group">
        <label class="control-label"> Contact Number <span style="color:red;"></span></label>
        <%= a.text_field :phone_number1, :class=>"form-control  input-lg", placeholder:"03001234567" %>
      </div>
      <div class="form-group">
        <label class="control-label">Contact Number(other- optional) <span style="color:red;"></span></label>
        <%= a.text_field :secondary_phone_number, :class=>"form-control  input-lg", placeholder:"03001234567" %>
      </div>
    </fieldset>
<% end %>