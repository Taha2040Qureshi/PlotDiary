<section id="content">
  <section class="vbox">
    <section class="scrollable padder">
      <div class="col-sm-12">
        <%= render :partial =>"shared/flash_messages"%>
        <section class="panel panel-default">
          <header class="panel-heading" style="background:#FFF;">
            <h3 style="color:#717171;">Add New Expense </h3>
          </header>
          <div class="panel-body">
            <%= form_for @expense_type,:url=>town_expense_types_path ,:html =>{:class=>"panel-body wrapper-lg"} do |f|  %>

                <div class="form-group">
                  <label class=" control-label">Expense type Name</label>
                    <%= f.text_field :name, :class=>"form-control  input-lg", placeholder:"Expense Type"%>
                </div>

                <div class="form-group">
                    <%= f.submit :class=>"btn btn-primary",:value=>"Add" %>
                    <%= button_tag "Cancel", :type => 'reset',:class=>"btn" %>
                </div>
            <% end %>
          </div>
        </section>
      </div>
    </section>
  </section>
</section>