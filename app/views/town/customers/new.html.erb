<section id="content">
  <section class="vbox">
    <section class="scrollable padder">
      <div class="col-sm-12">
        <%= render :partial =>"shared/flash_messages"%>
        <section class="panel panel-default">
          <header class="panel-heading" style="background:#FFF;">
            <h3 style="color:#717171;">Add Customer </h3>
          </header>
          <div class="panel-body">
            <%= form_for @customer, validate: true,:url=>town_customers_path ,:html =>{:class=>"panel-body wrapper-lg"} do |f|  %>

                <div class="form-group">
                  <label class="control-label">Customer Name</label>
                    <%= f.text_field :name , :class=>"form-control  input-lg" %>
                </div>
                <div class="form-group">
                  <label class="control-label">Father Name</label>
                  <%= f.text_field :f_name , :class=>"form-control  input-lg"%>
                </div>

                <div class="form-group">
                  <label class=" control-label">CNIC</label>
                    <%= f.text_field :cnic, :class=>"form-control  input-lg", placeholder:"3660111111111"  %>
                </div>


                <div class="form-group">
                    <%=render :partial =>'town/customers/partials/address.html.erb',:locals=>{:f => f}%>
                </div>


                <div class="form-group">
                  <label class=" control-label">Plot Number</label>
                    <%=f.collection_select :plot_id, current_user.town.plots.where(:status => 0).all,:id,:plot_number,{},{:class=>"form-control"}%>
                    <span class="help-block m-b-none">ALL Plots are shown here.</span>
                </div>

                <div class="form-group">
                  <%=render :partial =>'town/customers/partials/installment.html.erb',:locals=>{:f => f}%>
                </div>

                <div class="form-group">
                    <%= f.submit :class=>"btn btn-primary",:value=>"Add" %>
                    <%= button_tag "Cancel", :type => 'reset',:class=>"btn" %>
                </div>

            <% end %>
</div>
        </section>

      </div>
    </section>
  </section>
</section>
