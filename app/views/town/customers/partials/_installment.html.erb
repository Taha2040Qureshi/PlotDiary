<%= f.fields_for :installment do |a| %>
    <fieldset>
      <legend>Installment Details</legend>
      <div class="form-group">
        <label class="control-label">Total Amount <span style="color:red;"></span></label>
        <%= a.text_field :total_amount, :class=>"form-control  input-lg total-amount" %>
      </div>
      <div class="form-group">
        <label class="control-label">Advance Amount <span style="color:red;"></span></label>
        <%= a.text_field :advance_amount, :class=>"form-control  input-lg advance-amount" %>
      </div>
      <div class="form-group">
        <label class="control-label">Total Number Of Installments <span style="color:red;"></span></label>
        <%= a.text_field :total_number_of_installments, :class=>"form-control  input-lg no-of-ins" %>
      </div>
      <div class="form-group">
        <label class="control-label">Per Installment Amount <span style="color:red;"></span></label>
        <%= a.text_field :per_installments_amount, :class=>"form-control  input-lg per-ins-amount", :readonly=> true %>
      </div>
    </fieldset>
<% end %>
