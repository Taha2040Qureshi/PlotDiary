<section id="content">
  <section class="vbox">
    <section class="scrollable padder">

      <section class="panel panel-default">
        <header class="panel-heading" style="overflow:auto;background:#FFF;">
          <h4 style="margin-bottom:0px;"> <%=@title%> </h4>

          <%= render :partial =>"shared/flash_messages"%>
          <i data-title="ajax to load the data." data-placement="bottom" data-toggle="tooltip" class="fa fa-info-sign text-muted" data-original-title="" title=""></i>

        </header>

        <div class="table-responsive">
          <table class="table table-striped m-b-none" data-ride="datatables" style="font-size:15px;font-weight:300!important;">
            <thead>
            <tr>
              <th style="font-weight:500;">Plot Number</th>
              <th style="font-weight:500;">Street Number</th>
              <th style="font-weight:500;">Total Price </th>
              <th style="font-weight:500;">Area</th>
              <th style="font-weight:500;">Length</th>
              <th style="font-weight:500;">Width</th>
              <th style="font-weight:500;">Created at</th>
              <th style="font-weight:500;">Updated at</th>
              <th style="font-weight:500;">Action</th>
            </tr>
            </thead>
            <tbody>
            <%@plots.each do |e|%>
                <tr>
                  <td><%=e.plot_number%></td>
                  <td><%=e.street%></td>
                  <td><%=e.total_price%></td>
                  <td><%=e.area%></td>
                  <td><%=e.length%></td>
                  <td><%=e.width%></td>
                  <td><%=e.created_at%></td>
                  <td><%=e.updated_at%></td>
                  <td class="text-right">
                    <div class="btn-group">
                      <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-pencil"></i></a>
                      <ul class="dropdown-menu pull-right">
                        <li><%=link_to "Delete", town_plot_path(e) , :method => :delete, :confirm => "Are you sure?"%></li>
                      </ul>
                    </div>
                  </td>

                </tr>
            <%end%>
            </tbody>
            <tbody>
            </tbody>
          </table>
        </div>
      </section>
    </section>
  </section>
  <a data-target="#nav" data-toggle="class:nav-off-screen" class="hide nav-off-screen-block" href="#"></a>
</section>
