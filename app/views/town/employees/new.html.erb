<section id="content">
  <section class="vbox">
    <section class="scrollable padder">
      <div class="col-sm-12">
        <%= render :partial =>"shared/flash_messages"%>
        <section class="panel panel-default">
          <header class="panel-heading" style="background:#FFF;">
            <h3 style="color:#717171;">Add New Employee </h3>
          </header>
          <div class="panel-body">
            <%= form_for @employee ,validate: true, :url=>town_employees_path ,:html =>{:class=>"panel-body wrapper-lg"} do |f|  %>

                <div class="form-group">
                  <label class="control-label">Name</label>
                    <%= f.text_field :name , :class=>"form-control  input-lg"%>
                </div>

                <div class="form-group">
                  <label class="control-label">Father Name</label>
                  <%= f.text_field :f_name , :class=>"form-control  input-lg"%>
                </div>

                <div class="form-group">
                  <label class="control-label">CNIC</label>
                  <%= f.text_field :cnic, :class=>"form-control  input-lg"  %>
                </div>

                <div class="form-group">
                  <label class="control-label">Salary</label>
                    <%= f.text_field :salary , :class=>"form-control  input-lg" %>
                </div>

                <div class="form-group">
                  <label class=" control-label">Designation</label>
                    <%= f.text_field :designation , :class=>"form-control  input-lg"%>
                </div>

                <div class="form-group">
                    <%=render :partial =>'town/employees/partials/address.html.erb',:locals=>{:f => f}%>
                </div>


                <div class="form-group">
                    <%= f.submit :class=>"btn btn-primary",:value=>"Add" %>
                    <%= button_tag "Cancel", :type => 'reset',:class=>"btn" %>
                </div>
            <% end %>
          </div>
        </section>
      </div>
    </section>
  </section>
</section>